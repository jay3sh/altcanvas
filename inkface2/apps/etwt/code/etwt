
#!/usr/bin/env python

import os
import sys
import getopt

from etwtlib.loader import Loader
from etwtlib.constants import *

from etwtlib.entry import Entry

       
class App:
    def main(self, theme='default'):

        self.theme = theme

        loader = Loader()

        loader.connect('started',self.start)

        loader.eventloop()
        
    def start(self, canvas):
        self.entry = Entry(canvas, theme)
        self.entry.load()

def usage():
    print 'Twitter Inkface client:'
    print ' twitink.py [options]'
    print ' '
    print ' -t --theme  : Theme to use for the app'
    print ' -h --help   : usage'
   
if __name__ == '__main__':
    try:
        optlist, args = getopt.getopt(sys.argv[1:],'ht:',['help','theme='])
    except getopt.GetoptError, err:
        print str(err)
        usage()
        sys.exit(0)

    theme = 'default'
    for o,a in optlist:
        if o in ('-h','--help'):
            usage()
            break
        elif o in ('-t','--theme'):
            theme = a
 
    App().main(theme=theme)

