
#!/usr/bin/env python

import sys
from inkface.evas import EFace, ECanvas

def main():
    try:
        face = EFace(sys.argv[1])
    
        canvas = ECanvas(
                    (int(float(face.svg.width)),
                        int(float(face.svg.height))),
                    framerate = 60.0)
    
        face.load_elements(canvas)

        canvas.eventloop()
    
    except Exception, e:
        print 'Caught Exception: '+str(e)
        sys.exit(0)
    
if __name__ == '__main__':
    main()

